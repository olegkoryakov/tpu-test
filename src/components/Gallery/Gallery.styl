.gallery {
    min-height inherit
    position relative
    z-index 1
    box-sizing border-box
    padding 0 80px 70px
    display flex
    align-items flex-end
    &__slogan {
      position relative
      z-index 1
      margin 0
      margin-left auto
      max-width 424px
      color: primaryColor;
      font-size 42px
      line-height 52px
    }
    &__hooper {
      position absolute
      z-index 0
      top 0
      left 0
      width 100%
      height 100%
    }
  }

  @media screen and (max-width tabletBreakpoint) {
    .gallery {
      justify-content center
      align-items flex-start
      padding-left 30px
      padding-right 30px
      padding-top 30px
      &__slogan {
        padding-top 300px
        margin-left 0
        text-align center
        color tertiaryColor
      }
    }
  }

  @media screen and (max-width mobileBreakpoint) {
    .gallery {
      padding-left 50px
      padding-right 50px
      padding-top 50px
      &__slogan {
        padding-top 188px
        max-width 340px
        text-align center
        font-size 30px
        line-height 40px
      }
    }
  }