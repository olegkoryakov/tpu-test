.header {
  box-sizing border-box
  display flex
  justify-content flex-start
  margin-top 80px
  padding 0 120px

  &__logo {
    width 433px
  }

  &__logo-img {
    width 100%
  }

  &__nav {
    position absolute
    right 10px
  }

  &__nav-list {
    list-style none
    margin 0
    padding 0
  }

  &__language-switch {
    cursor pointer
    padding 0
    margin 0
    width 38px
    height 38px
    font-family inherit
    text-transform uppercase
    color primaryColor
    background-color transparent
    border 1px solid primaryColor
    border-radius 50%
    margin-bottom 20px
    &_active {
      border-color secondaryColor
      background-color secondaryColor
    }
    &:focus {
      outline none
    }
  }
}

@media screen and (max-width tabletBreakpoint) {
  .header {
    padding-left 60px
    padding-right 60px
    justify-content center
    &__nav {
      right 40px
    }
  }
}

@media screen and (max-width mobileBreakpoint) {
  .header {
    padding 0 30px
    &__logo {
      width 304px
      padding 0 45px
    }
    &__nav {
      right 30px
    }
  }
}