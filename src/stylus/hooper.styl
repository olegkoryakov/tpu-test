.hooper {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  height: 200px;

  & * {
    box-sizing: border-box;  
  }

  &:focus {
    outline none  
  }

  &.is-rtl {
    direction: rtl;
  }

  &-sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }

  &-slide {
    flex-shrink: 0;
    height: 100%;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  &-list {
    overflow hidden  
    width 100%
    height 100%
  }

  &-track {
    display: flex;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
  }

  &.is-vertical &-track {
    flex-direction: column;
  }

  &-pagination {
    padding 0

    left auto
    right 40px
  
    position absolute
    right 23px
    top 50%
    transform translateY(-50%)
  }

  &-indicators {
    margin 0
    padding 0
    list-style none
  }

  &-indicator {
    margin-bottom 10px
    cursor pointer
    width 14px
    height 14px
    background-color transparent
    border: 1px solid primaryColor
    border-radius 50%
    &.is-active {
      background-color primaryColor  
    }
    &:hover,&:focus  {
      outline none
      background-color primaryColor 
    }
  }

  &-navigation {
    position absolute
    left 120px
    bottom 80px
    display flex
    justify-content space-between
    width 116px
  }

  &-prev, &-next {
    cursor pointer
    position relative
    width 48px
    height 48px
    background-color primaryColor
    border-radius 50%
    border none
    & > svg {
      display none  
    }
    &:focus {
      outline: none  
    }
    &:before {
      content ""

      position absolute

      top 50%
      left 50%
      border 2px solid tertiaryColor
      width 15px
      height 15px  
    }
    &:hover, &:focus {
      background-color secondaryColor
      &:before {
        border-color primaryColor
      }  
    }

  }

  &-prev:before {
    border-bottom none 
    border-right none
    transform: translateX(-30%) translateY(-50%) rotate(-45deg)  
  }

  &-next:before {
      border-top none 
      border-left none
    transform: translateX(-70%) translateY(-50%) rotate(-45deg)  
  }

  @media screen and (max-width tabletBreakpoint) {
      &-indicators {
        display none  
      }

      &-navigation {
        left 50%
        transform: translateX(-50%)  
      }
  }
}